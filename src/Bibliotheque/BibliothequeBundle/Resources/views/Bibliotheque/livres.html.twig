{% extends '::base.html.twig' %}
{% block body %}

<div class="listLivres" >
	<ul>
		{% for theme in theme %}
		<li>{{ theme.intitule }}</li>
		{% endfor %}
	</ul>
</div>

<div class="listeLivre">
<h1>Livres</h1>
<table class="listLivre">
	<tr>
		{% for livre in livre|slice(0, 4) %}
			<td >
				 <a href="{{ path( 'bibliotheque_detail_livre', {'titre' : livre.titre } ) }}">
				 <img src="{{ asset(livre.urlimage) }}" alt="{{ livre.altimage }}" class="miniCouv">
				 {{ livre.titre }}
				 </a>
			</td>
		{% endfor %}
	</tr>
	<tr>
		{% for livre in livre|slice(4, 4) %}
